<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Info">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info Page"/>

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="404dp"
        android:layout_height="wrap_content"
        android:hint="Insert First Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="462dp"
        android:layout_height="wrap_content"
        android:hint="Insert Last Name"
        android:inputType="text" />
    <EditText
        android:id="@+id/etBirthMonth"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Insert Birth Month(number)"
        android:inputType="number"/>
    <EditText
        android:id="@+id/etBirthDay"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Insert Birth Day"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etBirthyear"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Insert Birth Year"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etStreetNumber"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Insert Street Number"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etStreetName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Insert Street Name"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etCity"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Insert City"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etState"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Insert State"
        android:inputType="text"/>





    <EditText
        android:id="@+id/etZip"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Insert Zip Code"
        android:inputType="number"/>




    <Button
        android:id="@+id/toDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ToDisplay"
        android:onClick="OnButtonClick"/>

</LinearLayout>